{
  "manifest_version": 3,
  "name": "ChatGPT Focus When Done",
  "version": "1.2.0",
  "description": "Focus the most recently submitted ChatGPT tab once when it finishes. Includes a Test Focus button.",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
 },
  "icons": {
    "16": "assets/icons/cgpt-focus-icon-16.png",
    "32": "assets/icons/cgpt-focus-icon-32.png",
    "48": "assets/icons/cgpt-focus-icon-48.png",
    "128": "assets/icons/cgpt-focus-icon-128.png"
  }
}
